<h2>
  <%= @wiki_page.name %>
  <% if params[:wiki_page].nil? || params[:submit_preview]-%>
  <% else -%>
    <%#= @wiki_page.name -%>
  <% end %>
</h2>
<%= render :partial => "functions"%>
<hr/>

<%= form_tag :action => 'edit' do %>
  <% if @wiki_html %>
    <%= @wiki_html.html_safe %>
  <% end %>
  Page Name: <%= text_field(:wiki_page, :name) %> 
  <br/>
  Summary:
  <%= text_field :wiki_page, :summary, :size => 80 %>
  <br/>
  <%= text_area :wiki_page, :content, :cols => 80, :rows => 20  %>
  <br/>
  Commit log:
  <br/>
  <%= text_area :wiki_page, :log, :cols => 80, :rows => 5  %>
  <br/>
  <% if current_user.login == 'guest' %>
    <%= recaptcha_tags %> 
  <% end %>
  <%= submit_tag 'Preview', :name => 'submit_preview' %>
  <%= submit_tag 'Save', :name => 'submit_save' %>
  <% if @wiki_permit %>
    <%= check_box_tag 'is_revision' %>Need be a revision.
  <% else %>
    <%= hidden_field_tag 'is_revision', '1' %>
  <% end %>
<% end %>

<hr/>
<%= render :partial => "functions"%>
