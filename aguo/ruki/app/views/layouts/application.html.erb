<!DOCTYPE html>
<html>
<head>
  <title>Wiki</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield :page_head %>
  <script type="text/javascript">
    <%= yield :ujs %>
  </script>
</head>
<body>
  <%= link_to 'Wiki List', projects_path() %> |
  <%= link_to 'login', :action => :login, :controller => :projects %> |
  <% if session['wiki_lang'] == 'en' %>
    <%= link_to 'Chinese', :action => :lang, :controller => :projects, :lang => 'tw' %>
  <% else %>
    <%= link_to 'English', :action => :lang, :controller => :projects, :lang => 'en' %>
  <% end %>
  <br/>
  current_user is <%= current_user.login%><br/>
  <span style="color:red"><%= flash[:warning] %></span>
  <%= yield %>
</body>
</html>
